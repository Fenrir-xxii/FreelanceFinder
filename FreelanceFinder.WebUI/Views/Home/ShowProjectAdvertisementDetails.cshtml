@{
}
@model ProjectAdvertisementDTO;
<div class="container py-3">
    <div class="py-3 border border-3 rounded" style="background-color:azure">
        <div class="row fs-4 text text-center">
            <div class="d-flex flex-row justify-content-around fw-bold">
                <div class="col col-md-6 border border-2 rounded mx-2" style="max-width:600px;">
                    <a>@Model.Title</a>
                </div>
                <div class="col col-md-6 border border-2 rounded mx-2" style="max-width:600px;">
                    <a>@Model.Employer.Name</a>
                </div>
            </div>
        </div>
        <div class="row" style="height: 40vh;">
            <div class="col mx-3">
                <div class="fs-6 text" style="height: 60%;">
                    @Model.Description
                </div>
                <div>
                    Required Skills:
                    <div class="d-flex flex-column">
                        @foreach (var requiredSkill in Model.RequiredSkills)
                        {
                            <div>

                                <span class="badge bg-success">@requiredSkill.Skill.Title</span>
                                <span>@requiredSkill.MonthsOfExperience months of expirience &</span>
                                <span>@requiredSkill.FinishedProjectCount finished projects</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row fs-5 text text-center">
            <div class="d-flex flex-row justify-content-around fw-bold">
                <div class="col col-md-6 border border-2 rounded mx-2" style="max-width:400px;">
                    @Model.Price @Model.Currency.CurrencyISOCode
                </div>
                <div class="col col-md-6 border border-2 rounded mx-2" style="max-width:400px;">
                    Expires at: @Model.ExpiredAt.ToString("dd.MM.yyyy")
                </div>
            </div>
        </div>


    </div>
    <div class="text-end py-3">
        <a href="/" class="btn btn-warning">Return</a>
    </div>
</div>